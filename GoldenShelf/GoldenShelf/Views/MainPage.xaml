<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenShelf.MainPage"             
             BackgroundColor="#EEEEEE"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">

            <Image Source="goldenshelf.png" HeightRequest="230" />
            <Label Text="GoldenShelf" FontSize="35" FontAttributes="Bold" TextColor="#E6B614" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout Grid.Row="1">
            <Button Text="Logın" BackgroundColor="#E6B614" CornerRadius="25" Margin="25,5" Clicked="Button_Clicked" TextColor="White"/>
            <Button Text="Regıster" BackgroundColor="#E6B614" CornerRadius="25" Margin="25,5" Clicked="Button_Clicked_1" TextColor="White"/>
        </StackLayout>

    </Grid>



</ContentPage>
